  <!-- FAQs Widget ******************* -->

  <FAQs
    title={t('faqs.title')}
    subtitle={t('faqs.subtitle')}
    highlight="FAQs"
    items={[
      [
        {
          question: t('faqs.item1.title'),
          answer: t('faqs.item1.description'),
